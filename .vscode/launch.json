    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rodio_player'",
            "cargo": {
                "args": [
                    "build",
                    "--package=xmrsplayer",
                    "--features=demo",
                    "--example=rodio_player"
                ],
                "filter": {
                    "name": "rodio_player",
                    "kind": "example"
                }
            },
            "args": ["-t", "-d", "-f","/home/user/Downloads/test.xm","-p","0","-c","1"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rodio_player'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=xmrsplayer",
                    "--features=demo",
                    "--example=rodio_player"
                ],
                "filter": {
                    "name": "rodio_player",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
